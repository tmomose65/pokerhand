<div class="wrapper">
<div class="container">
  <div class="header">
    <h1 class="header-name text-center">Check a Porker Hand</h1>
  </div>
  <div class="contents">
    <div class="card-form form-group form-inline">
      <%= form_tag({:controller => 'home', :action => 'top'}, :remote => true, :class => 'form-ajax') do -%>
      <%= text_field_tag :card , "", :class => 'form-control input-form', placeholder: "H1 H2 H3 H4 H5" %>
    </div>
    <div class="form-group col-xs-4 col-xs-offset-4">
      <%= submit_tag 'Check' , :class => 'btn btn-primary center-block'%>
      <% end %>
    </div>
    <div id="result" class="col-xs-10 col-xs-offset-1">
    </div>
    <div id="error" class="col-xs-10 col-xs-offset-1">
    </div>
  </div>

</div>
</div>
